<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/nameRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pfNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/autour_one"
                android:text="Album Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:auto_cycle="true"
                app:delay="1"
                app:placeholder="@drawable/ic_add_photo"
                app:period="5000"
                app:corner_radius="5"
                android:layout_below="@id/pfNameTv"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/photoLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameRl"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo1IV"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_margin="1dp"
                android:src="@drawable/ic_add_photo" />

            <ImageView
                android:id="@+id/photo2IV"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_margin="1dp"
                android:src="@drawable/ic_add_photo" />

            <ImageView
                android:id="@+id/photo3IV"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_margin="1dp"
                android:src="@drawable/ic_add_photo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/photoLL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photoLL"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo4IV"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_margin="1dp"
                android:src="@drawable/ic_add_photo" />

            <ImageView
                android:id="@+id/photo5IV"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_margin="1dp"
                android:src="@drawable/ic_add_photo" />

            <ImageView
                android:id="@+id/photo6IV"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_margin="1dp"
                android:src="@drawable/ic_add_photo" />
        </LinearLayout>

        <TextView
            android:id="@+id/pfInfoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photoLL2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/autour_one"
            android:text="Album Info"
            android:textColor="@color/black" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>